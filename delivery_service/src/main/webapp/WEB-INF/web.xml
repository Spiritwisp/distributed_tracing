<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <display-name>delivery-service</display-name>

    <servlet>
        <servlet-name>DeliveryController</servlet-name>
        <servlet-class>com.godel.presenation.tracing.controller.DeliveryController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DeliveryController</servlet-name>
        <url-pattern>/delivery</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>tracingFilter</filter-name>
        <filter-class>com.godel.presenation.tracing.config.DelegatingTracingFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>tracingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>


</web-app>
